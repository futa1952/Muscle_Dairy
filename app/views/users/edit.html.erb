<div class="row">
  <div class="user-edit">
    <div class="col-xs-8 col-xs-offset-2">
      <h2 class="user-edit__title">プロフィール編集</h2>
      <%= form_for(@user) do |f| %>
      <div class="user-edit__form-group">
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "neme", placeholder:"名前" %>
      </div>
      <div class="user-edit__form-group">
        <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
      </div>
      <div class="user-edit__image">
        <span class="fas fa-images form-control-icon" aria-hidden="true"></span>
        <%= f.label :プロフィール画像 %><br />
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle" %>
      </div>
      <div class="form-group has-icon">
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit__form" %>
      </div>
      <%= f.submit "変更を保存", class:"btn btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>