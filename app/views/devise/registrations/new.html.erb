<div class="signup">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>新規会員登録</h2>
  <div class="field">
    <%= f.label :氏名, class: "control_label" %><br />
    <%= f.text_field :name, autofocus: true, class: "form_control", autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス, class:"control_label" %><br />
    <%= f.email_field :email, autofocus: true, class: "form_control" ,autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class:"control_label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form_control" ,autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認）, class:"control_label" %><br />
    <%= f.password_field :password_confirmation, class: "form_control" ,autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" ,class: "btn btn-primary signup__btn" %>
  </div>
  <% end %>

  <div class="login-content">
    <%= link_to new_user_session_path do %>
    <span class="glyphicon glyphicon-chevron-left">ログインはこちら</span>
    <% end %>
  </div>
</div>